{
  "scopeName": "source.ploy",
  "fileTypes": ["ploy"],
  "name": "Ploy",
  "patterns": [
    { "name": "comment.line.ploy",
      "match": "//[^\\n]*" },
    { "name": "keyword.control.ploy",
      "match": "\\b(and|extensible|host_type|host_val|if|fn|in|match|or|pub)\\b" },
    { "name": "keyword.operator.ploy",
      "match": "[@:=.?\\^%|/$\\-]|\\+=|@\\?|=:|::" },
    { "name": "punctuation.ploy",
      "match": "[\\[\\];(){}<>]" }

  ],
  "repository": {
  }
}
